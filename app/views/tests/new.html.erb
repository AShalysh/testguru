<h1>Create New Test</h1>
<form action="/tests" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <p>
    <label for="test-title">Title:</label>
    <input type="text" name="test[title]" id="test-title">
  </p><br>

  <p>
    <label for="test-level">Level:</label>
    <input type="integer" name="test[level]" id="test-level">
  </p><br>

  <p>
    <label for="test-category_id">Category:</label>
    <select name="test[category_id]" id="test-category_id">
      <option value="1">frontend</option>
      <option value="2">backend</option>
      <option value="3">mobile development</option>
    </select>
  </p><br>

  <p>
    <label for="test-user_id">Author:</label>
    <select name="test[user_id]" id="test-user_id">
      <option value="1">Ivanov I.</option>
      <option value="2">Petrov P.</option>
    </select>
  </p><br>
  <input type="submit" value="Create">
</form>