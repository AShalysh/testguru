<div class="container mt-5">
  <h4 class="text-md-center"> Question for test: <%=  @question.test.title %></h4>

  <h5><%= @question.body %></h5>

  <h4 class="text-md-center"> Answers </h4>

  <table class="table table-bordered mt-3">
    <tr>
      <th> Answer </th>
      <th> Correct? </th>
      <th colspan="2"> Actions </th>
    </tr>
    <%= render @question.answers %>
  </table>

  <%= link_to 'New Answer', new_admin_question_answer_path(@question) %> | 
  <%= link_to 'Back to the test', admin_test_path(@question.test)%>
</div>
