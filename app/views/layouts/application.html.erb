<!DOCTYPE html>
<html>
  <head>
    <title>Testguru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class = "nav user"> <%= link_to "The Name of Project is TestGuru", tests_path %> </p>
    <% if logged_in? %>
      <p class = "nav user">Welcome, <b><%= current_user.first_name %></b>!</p>
      <p class = "nav user"> <%= link_to "Log out", logout_path, method: :delete %> </p>
    <% else %>
      <p class = "nav user"> <%= link_to "Log in", login_path %> </p>
      <p class = "nav user"> New user? <%= link_to "Sign up now", signup_path %> </p>
    <% end %>
    <%= yield %>
    <%= render 'shared/footer' %>
  </body>
</html>
