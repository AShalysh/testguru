<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <h4><%= t('.header', title: @test_passage.test.title) %></h4>
    <% if @test_passage.success? %>
      <p><%= t('.score-green', score: @test_passage.score) %></p>
    <% else %>
      <p><%= t('.score-red', score: @test_passage.score) %></p>
    <% end %>
    <%= link_to 'The list of all tests.', tests_path %>
  </div>
</div>
